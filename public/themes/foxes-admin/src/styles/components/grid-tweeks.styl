//I want to use col inside col and have it all line up okay, ps im only going to do this for the esentuals [4,6,12]
bsgp = 15px

[class^='col-'].nested-grid
	//all-children reset
	& > [class^='col-']
		padding-left:0;
		padding-right:0;

	//first-of match col 4
	& > [class*='-4'][class^='col-']:first-child//thirds
		padding-right:(bsgp / 2);

	//central items of col 4
	& > [class*='-4'][class^='col-']:nth-child(even)
		padding-right:(bsgp / 2);
		padding-left:(bsgp / 2);

	//any not first match of col 4
	& > [class*='-4'][class^='col-']:nth-child(3n+3)//thirds
		padding-left:(bsgp / 2);

	//first-of match col 6
	& > [class^='col-'][class*='-6']:nth-child(even)//thirds
		padding-right:(bsgp / 2);

	//any not first match of col 6
	& > [class*='-6'][class^='col-']:nth-child(odd)//thirds
		padding-left:(bsgp / 2);
